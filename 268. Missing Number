class Solution {
public:
    int missingNumber(vector<int>& nums) {
        int n=nums.size();
        for(int i=0;i<n;){
            if(nums[i]<n && nums[i]!=i)
                swap(nums[i],nums[nums[i]]);
            else
                i++;
            }
            for(int i=0;i<n;i++){
                if(nums[i]!=i) return i;
            }
        return n;
    }
};


TC: O(N)         SC: O(1)



class Solution{
public:
    int missingNumber(vector<int>& nums){
        int n=nums.size();
        int expected=n*(n+1)/2;
        int actual=accumulate(nums.begin(),nums.end(),0);
        return expected-actual;
    }
};



