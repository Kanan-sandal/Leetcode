class Solution{
public:
    int maxProduct(vector<int>& nums){
        int n=nums.size();
        int minprod=nums[0];
        int maxprod=nums[0];
        int result=nums[0];
        for(int i=1;i<n;i++){
            int curr=nums[i];

            if(curr<0){
                swap(maxprod,minprod);
            }
            maxprod=max(curr,curr*maxprod);
            minprod=min(curr,curr*minprod);
            result=max(result,maxprod);
        }
        return result;
    }
};
