class Solution {
public:
    int rob(vector<int>& nums) {
        int n=nums.size();
        if(n==1) return nums[0];
        return max(robline(nums,0,n-2),robline(nums,1,n-1));
    }
private:
    int robline(vector<int>& nums,int l,int r){
        int prev1=0,prev2=0;
        for(int i=l;i<=r;i++){
            int curr=max(prev1,nums[i]+prev2);
            prev2=prev1;
            prev1=curr;
        }
        return prev1;
    }
};
