class Solution {
public:
    vector<int> findAnagrams(string s, string p) {
        vector<int> res;
        if(p.size()>s.size()) return res;
        
        vector<int> freqp(26,0),freqs(26,0);
        
        for(char c: p) freqp[c-'a']++;

        for(int i=0;i<s.size();i++){
            freqs[s[i]-'a']++;


            if(i>=p.size()){
                freqs[s[i-p.size()]-'a']--;
            }
            if(freqp==freqs){
                res.push_back(i-p.size()+1);
            }
        }
        return res;
    }
};
