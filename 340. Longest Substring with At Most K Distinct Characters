#include <bits/stdc++.h>
using namespace std;
int kDistinctChars(int k, string &s)
{
    if(k==0 || s.empty()) return 0;
    unordered_map<char,int> freq;
    int left=0, maxlen=0;

    for(int right=0;right<s.size();right++){
        freq[s[right]]++;


        while(freq.size()>k){
            freq[s[left]]--;


            if(freq[s[left]]==0){
                freq.erase(s[left]);
            }
            left++;
        }
        maxlen=max(maxlen,right-left+1);
    }
    return maxlen;
}


